{
    "compilerOptions": {
      "target": "es2020",         // Or a newer ECMAScript target
      "module": "commonjs",        // ts-node works well with commonjs
      "rootDir": "./src",
      // "outDir": "./dist",      // outDir is used by tsc, not directly by ts-node for execution
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": { // Optional: ts-node specific options
      "files": true // If you want ts-node to include files specified in tsconfig "files" array
      // "compilerOptions": { // You can override compilerOptions for ts-node here
      //   "module": "CommonJS"
      // }
    }
  }